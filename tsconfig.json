{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "./source/scripts",
    "outDir": "./static/scripts",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "declaration": false
  },
  "include": [
    "source/scripts/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}